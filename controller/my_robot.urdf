<?xml version="1.0"?>
<robot name="physic_arm">

  <material name="orange"><color rgba="1.0 0.5 0.0 1.0"/></material>
  <material name="grey"><color rgba="0.2 0.2 0.2 1.0"/></material>
  <material name="silver"><color rgba="0.9 0.9 0.9 1.0"/></material>

  <link name="base_link">
    <visual>
      <geometry><cylinder length="0.05" radius="0.1"/></geometry>
      <material name="grey"/>
    </visual>
    <collision>
      <geometry><cylinder length="0.05" radius="0.1"/></geometry>
    </collision>
  </link>

  <joint name="joint_1" type="revolute">
    <parent link="base_link"/>
    <child link="link_1"/>
    <origin xyz="0 0 0.025"/>
    <axis xyz="0 0 1"/>
    <limit lower="-3.14" upper="3.14" effort="100" velocity="1"/>
  </joint>

  <link name="link_1">
    <inertial>
      <origin xyz="0 0 0.075"/>
      <mass value="1.0"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
    </inertial>
    <visual>
      <geometry><cylinder length="0.15" radius="0.06"/></geometry>
      <origin xyz="0 0 0.075"/>
      <material name="orange"/>
    </visual>
    <collision>
       <geometry><cylinder length="0.15" radius="0.06"/></geometry>
       <origin xyz="0 0 0.075"/>
    </collision>
  </link>

  <joint name="joint_2" type="revolute">
    <parent link="link_1"/>
    <child link="link_2"/>
    <origin xyz="0 0 0.15"/>
    <axis xyz="0 1 0"/>
    <limit lower="-2.35" upper="2.35" effort="100" velocity="1"/>
  </joint>

  <link name="link_2">
    <inertial>
      <origin xyz="0 0 0.125"/>
      <mass value="1.0"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
    </inertial>
    <visual>
      <geometry><box size="0.05 0.05 0.25"/></geometry>
      <origin xyz="0 0 0.125"/>
      <material name="orange"/>
    </visual>
    <collision>
      <geometry><box size="0.05 0.05 0.25"/></geometry>
      <origin xyz="0 0 0.125"/>
    </collision>
  </link>

  <joint name="joint_3" type="revolute">
    <parent link="link_2"/>
    <child link="link_3"/>
    <origin xyz="0 0 0.25"/>
    <axis xyz="0 1 0"/>
    <limit lower="-2.8" upper="2.8" effort="100" velocity="1"/>
  </joint>

  <link name="link_3">
    <inertial>
      <origin xyz="0 0 0.1"/>
      <mass value="0.8"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
    </inertial>
    <visual>
      <geometry><box size="0.04 0.04 0.2"/></geometry>
      <origin xyz="0 0 0.1"/>
      <material name="orange"/>
    </visual>
    <collision>
      <geometry><box size="0.04 0.04 0.2"/></geometry>
      <origin xyz="0 0 0.1"/>
    </collision>
  </link>

  <joint name="joint_4" type="revolute">
    <parent link="link_3"/>
    <child link="palm"/>
    <origin xyz="0 0 0.2"/>
    <axis xyz="0 0 1"/>
    <limit lower="-3.14" upper="3.14" effort="50" velocity="2"/>
  </joint>

  <link name="palm">
    <inertial>
      <origin xyz="0 0 0.025"/>
      <mass value="0.2"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
    <visual>
      <geometry><box size="0.1 0.03 0.05"/></geometry>
      <origin xyz="0 0 0.025"/>
      <material name="grey"/>
    </visual>
    <collision>
      <geometry><box size="0.1 0.03 0.05"/></geometry>
      <origin xyz="0 0 0.025"/>
    </collision>
  </link>

  <joint name="finger_left_joint" type="revolute">
    <parent link="palm"/>
    <child link="finger_left"/>
    <origin xyz="-0.04 0 0.05"/>
    <axis xyz="0 1 0"/>
    <dynamics damping="0.0" friction="0.0"/> 
    <limit lower="0" upper="0.6" effort="10" velocity="1"/>
  </joint>

  <link name="finger_left">
    <inertial>
      <origin xyz="0 0 0.04"/>
      <mass value="0.1"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
    <visual>
      <geometry><box size="0.01 0.02 0.08"/></geometry>
      <origin xyz="0 0 0.04"/>
      <material name="silver"/>
    </visual>
    <collision>
      <geometry><box size="0.01 0.02 0.08"/></geometry>
      <origin xyz="0 0 0.04"/>
    </collision>
  </link>

  <joint name="finger_right_joint" type="revolute">
    <parent link="palm"/>
    <child link="finger_right"/>
    <origin xyz="0.04 0 0.05"/>
    <axis xyz="0 1 0"/>
    <dynamics damping="0.0" friction="0.0"/>
    <limit lower="-0.6" upper="0" effort="10" velocity="1"/>
  </joint>

  <link name="finger_right">
    <inertial>
      <origin xyz="0 0 0.04"/>
      <mass value="0.1"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
    <visual>
      <geometry><box size="0.01 0.02 0.08"/></geometry>
      <origin xyz="0 0 0.04"/>
      <material name="silver"/>
    </visual>
    <collision>
      <geometry><box size="0.01 0.02 0.08"/></geometry>
      <origin xyz="0 0 0.04"/>
    </collision>
  </link>

</robot>